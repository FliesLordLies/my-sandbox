extends includes/templates/layout.pug

block providingLists
  - const tabList = getList("tabs", "home");

append head
  title Piroll: Home
block main
  .main__content
    .banner.main__banner
      .banner__content
        .article
          .article__header UI/UX & Graphic Designer
          .article__body
            | I am a Graphic & Web Designer based in New York, specializing in
            | User Interface Design and Development.
    .main__display
      .portfolio
        - let rowsCount = 0, columnsCount = 0;

        while rowsCount < 3
          - rowsCount++;
          .portfolio__row

            while columnsCount < 4
              - columnsCount++;

              if rowsCount == 2 && columnsCount == 2
                .portfolio-item.portfolio-item_distinct.portfolio__item
                  a(class="portfolio-item__content" href="" title="")
                    .portfolio-item__image.portfolio-item__image_distinct
                    .portfolio-item__info 
              else
                .portfolio-item.portfolio__item
                  a(class="portfolio-item__content" href="" title="")
                    .portfolio-item__image
                    .portfolio-item__info

            - columnsCount = 0;